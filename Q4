#第一问
a <- sample(50:1000 , 100 , replace = FALSE) #创建100个50-1000的随机数
sum(a) #求和
median(a) #中位数
mean(a) #平均数
var(a) #方差

#第二问
r <- atan(1000) #计算r的值
S = pi/2 * (r ^ 2) #公式计算圆面积

#第三问
#定义p1
x1 <- 2
y1 <- 3
#定义p2
> x2 <- 13
> y2 <- 22
#将x1-y1，x2-y2保存在X,Y中
> X <- x2-x1
> Y <- y2-y1
#用公式算距离
> p <- sqrt((X ^ 2) + (Y ^ 2))
