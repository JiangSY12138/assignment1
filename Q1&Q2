#练习一
a <- 1:1000 #赋值
b <- 1/a #取倒数
res1 <- atan(b) #求正切

x <- as.numeric(a) #整数向量转换为数字向量
y <- atan(1/x) #求倒数正切
z <- 1/tan(y) #求切线倒数

#练习二
x == z #用 == 比较x,z
identical(x,z) #用identical函数比较，不等
> all.equal(x,z) #用all.equal比较，相等
all.equal(x,z,tolerance = 0) #tolerance=0时结果[1] "Mean relative difference: 1.270335e-16"，意为最小的容忍度是1.270335e-16时两者相等
